
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GEN - Login</title>
    <link href="~/Content/lumino/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/lumino/css/datepicker3.css" rel="stylesheet">
    <link href="~/Content/lumino/css/styles.css" rel="stylesheet">
    <link href="~/Content/css/login.css" rel="stylesheet">
    <!--Icons-->
    <script src="~/Content/lumino/js/lumino.glyphs.js" type="text/javascript"></script>
</head>

<body>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading"><h3>GEN App - Login</h3></div>
                <div class="panel-body">
                    <form role="form" method="post">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Username" name="username" type="email" autofocus="" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="" required>
                            </div>
                            <button id="btnLogin" class="btn btn-large btn-primary btn-block"><strong>Login</strong></button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<!-- javascript js -->
<script src="~/Content/lumino/js/jquery-1.11.1.min.js"></script>
<script src="~/Content/lumino/js/bootstrap.min.js"></script>
<script type="text/javascript">
    var Status = '<%=ViewData["STATUS"]%>';
    var Message = '<%=ViewData["MESSAGE"]%>';
    if (Status != '' && Message != '') {
        if (Status == true) {
            if (alert(Message)) {
                document.location = '/MasterEmail';
            }
        } else {
            alert(Message);
        }
    }
</script>
